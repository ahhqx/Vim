
	(function(){
         var CONST={
                "live-server":["https://live.alipay.com/live800"],
		"robot-server":["https://chat.alipay.com/robot"],
		"chat-url":"https://zizhu.alipay.com/chat.html",
                "iconClassName":"lim:live:icon",
                "imageUrl":"https://img.alipay.com/chat/onlineService.gif",
                "winAttr":"toolbar=0,scrollbars=0,location=0,menubar=0,resizable=1,width=570,height=424"
        };

        function bind(el,name,func){
                if(window.attachEvent){
                        el.attachEvent("on"+name,func);
                }else{
                        el.addEventListener(name,func,false);
                }
        };

        function $(name,ctx){
                var childs=(ctx||document.body).getElementsByTagName('*'),length=childs.length,els=[];
                for(var i=0;i<length;i++){
                        if(childs[i].className.match(new RegExp("(^|\\s)"+name+"(\\s|$)"))){
                                els.push(childs[i]);
                        }
                }
                return els;
        };

        function getRandomServer(servers){
                var count=servers.length,random;
                if(count==1){
			random=0;
                }else{
                    random=(new Date()).getTime()%count;
                }
		return servers[random];
        };
		function getProtocol(){
			var protocol = document.location.protocol;
            protocol = (protocol == "file:") ? "http:" : protocol;
			return protocol;
		};
        function openWin(){
                var prefix=getRandomServer(CONST["live-server"]),robotServer=getRandomServer(CONST["robot-server"]),
					url=prefix+"/chatClient/chatbox",
					robotUrl=robotServer+"/chatClient/client",
                    company=this.getAttribute("lim:company")||"8000",
                    params=this.getAttribute("lim:params")||"other=noParam",
					priority=this.getAttribute("lim:priority")||"robot",
                    queryString="",
                    html="",
					chatUrl=CONST["chat-url"],
					el=this;
                if(!!company)
                        queryString+="companyID="+company;
                if(!!params)
                        queryString+="&"+params+"&robotServerPrefix="+encodeURIComponent(CONST["robot-server"])+"&liveServerPrefix="+encodeURIComponent(CONST["live-server"])+"&priority="+priority;
				if(queryString.indexOf("enterurl")==-1){
						queryString+="&enterurl="+encodeURIComponent(document.URL);
				}
				if(getProtocol()=="https:"){
					chatUrl.replace("http:","https:");
				}
                function reOpen(){
                        try{
                                el.win=window.open(chatUrl+"?"+queryString,"robot"+company,CONST["winAttr"]);
                        }catch(err){
                                window.open(url+".jsp?"+queryString,"live800"+company,CONST["winAttr"]);
                        }
                };
                if(!!this.win){
                        try{
                                if(document.all){
                                        this.win.focus();
                                }else{
                                        reOpen();
                                }
                        }catch(e){
                                reOpen();
                        }
                }else{
                        reOpen();
                }
        };
        function init(el){
                bind(el,"click",function(){openWin.apply(el)});
       				var image=el.getAttribute("lim:image")||CONST["imageUrl"];
					el.innerHTML="<a href='javascript:void(0)' onclick='return false;'><img src='"+image+"' style='cursor:pointer;border:none'/></a>";
        };
		
		//bind click evevnt for instance help project by ediyang 
		var insHelpOnChat = D.query('.HelpOnlineChat');
		if(insHelpOnChat.length>0){
			insHelpOnChat.forEach(function(el){
				bind(el,"click",function(){openWin.apply(el)});
			});
		}

        bind(window,"load",function(){
                var icons=$(CONST["iconClassName"]);
                if(icons.length>0){
                        for(var i=0;i<icons.length;i++){
                                init(icons[i]);
                        }
                }
        });
})();


(function() {
				var DURATION = 500, INTERVAL = 20;
		var os = {top: 66, right: 10, width: 88, height: 70, fixed: false},
			win = window, doc = document, body = doc.body, docE = win.documentElement,
			target = doc.getElementById("onlineService"),
			getWidth = function() {
				return Math.max(win.innerWidth || 0, docE ? docE.clientWidth : body.clientWidth);
			}, getHeight = function() {
				return Math.max(win.innerHeight || 0, docE ? docE.clientHeight : body.clientHeight);
			}, getScrollLeft = function() {
				return Math.max(doc.documentElement.scrollLeft, body.scrollLeft);
			}, getScrollTop = function() {
				return Math.max(doc.documentElement.scrollTop, body.scrollTop);
			}, setY = function(top) {
				target.style.top = top + 'px';
				lastTop = top;
			}, dispatchEvent = function(element, eventName, fn) {
				if(element.attachEvent)
					element.attachEvent('on' + eventName, function(e) { fn.call(element, e); });
				else if(element.addEventListener)
					element.addEventListener(eventName, fn, false);
				else
					element['on' + eventName] = fn;
			},
			lastTop = -1, lastLeft = -1, timer,
			handler = function() {

				var top = getScrollTop();
				if(os.hasOwnProperty('top')) top += os.top; else top -= os.bottom - os.height;

				if(lastTop < 0 || Math.abs(top - y) <= INTERVAL) { // init or distance is too short
					setY(top);
				} else { // animate
					var y = parseInt(target.style.top, 10), dy = (top - y) / INTERVAL;
					timer && win.clearInterval(timer);
					timer = win.setInterval(function() {
						setY(y + dy);
						}, INTERVAL);
					win.setTimeout(function() {
							win.clearInterval(timer);
							setY(top);
						}, DURATION + 10);
				}
			};
		if(os.hasOwnProperty('left')) target.style.left = os.left + 'px'; else target.style.right = os.right + 'px';
		handler();
		dispatchEvent(win, 'resize', handler);
		dispatchEvent(win, 'scroll', handler);

})();

</script>
#end

