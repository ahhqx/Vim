## 配置随机显示第一帧的图片
<script type="text/javascript">
	(function(){
    var arr = [['1','http://img.alipay.net/home/index11.jpg','1'],['2','http://img.alipay.net/home/index11.jpg','2'],['3','http://img.alipay.net/home/index11.jpg','3'],['4','http://img.alipay.net/home/index11.jpg','4'],['5','http://img.alipay.net/home/index11.jpg','5']],
        rand = Math.floor(Math.random()*4),
        link = '';
        link = '<a href="' + arr[rand][0] + '"><img src="' + arr[rand][1] + '" alt="' + arr[rand][2] + '" /></a>';
        document.getElementById('J-firstImg').innerHTML = link;        
	})();
</script>

