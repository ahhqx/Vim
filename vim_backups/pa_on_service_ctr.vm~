<script>

#set($pageAbsUrl = "$!request.getServerName()"+"$!request.getContextPath()"+"$!request.getServletPath()")

#if($!stringUtil.indexOf("$pageAbsUrl", "/choose", 0) != -1 && $stringUtil.indexOf("$pageAbsUrl", "certify.alipay", 0) != -1 ) 
try {
	var onlineService = D.get('onlineService'), cookie = 'showOnlineService';
	var percent = 0.5;
} catch (e) {
	var percent = 0;
}
percent = new Number(percent);
if (onlineService) {
	onlineService.style.display = 'none';
	if (document.location.href.indexOf('choose.htm') > -1 && document.location.href.indexOf('certify.alipay') > -1) {
		YAHOO.util.Cookie.set(cookie, 'N', {
				path : '/'
			});
		if (Math.random() < percent) {
			YAHOO.util.Cookie.set(cookie, 'Y', {
				path : '/'
			});
			onlineService.style.display = 'block';
		}
	} else {
		if (YAHOO.util.Cookie.get(cookie) == 'Y') {
			onlineService.style.display = 'block';
		}
	}
}

#elseif($!stringUtil.indexOf("$pageAbsUrl", "katongweb.alipay", 0) != -1 ) 

try {
	var onlineService = D.get('onlineService'), cookie = 'showOnlineService';
	var percent = 0.5;
} catch (e) {
	var percent = 0;
}
percent = new Number(percent);
if (onlineService) {
	onlineService.style.display = 'none';
	if (document.location.href.indexOf('index.htm') > -1 && document.location.href.indexOf('katong.alipay') > -1) {
		YAHOO.util.Cookie.set(cookie, 'N', {
				path : '/'
			});
		if (Math.random() < percent) {
			YAHOO.util.Cookie.set(cookie, 'Y', {
				path : '/'
			});
			onlineService.style.display = 'block';
		}
	} else {
		if (YAHOO.util.Cookie.get(cookie) == 'Y') {
			onlineService.style.display = 'block';
		}
	}
}

#end
</script>

