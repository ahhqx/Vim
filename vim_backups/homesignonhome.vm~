						##=============Start=统计控件安装成功率，记录未安装控件的用户============##
						<script>
							(function(){
								try{
									var aDomain=document.domain.split(".");
									var sDomain=aDomain[aDomain.length-2]+"."+aDomain[aDomain.length-1];
									document.domain=sDomain;
								} catch (e) {}
								
								window.AlieditControl = {};
								
								window.AlieditControl = {
									cookie : {
										set: function(name, value, expires) {
											
											var sCookie = name+'='+encodeURIComponent(value);
								 
											if(expires) {
												var exp = new Date();
												exp.setTime(exp.getTime() + expires);
												sCookie += '; expires=' + exp.toGMTString();
											}
											if(!/undefined/.test(sDomain)) {
												sCookie += '; domain=' + sDomain;
											}
											document.cookie = sCookie;
										},
										get: function(name) {
											var cRE = new RegExp('(?:; )?'+name+'=([^;]*);?');
											return cRE.test(document.cookie) ? decodeURIComponent(RegExp['$1']) : null;
										},
										remove: function(name) {
											this.set(name, '', new Date(0));
										}
									},
									getAlieditObj : function(){
										if (window.ActiveXObject) {
											try {
												return (new ActiveXObject('Aliedit.EditCtrl'));
											} catch (e) { };
										} else {
											return navigator.plugins['Alipay security control'] || navigator.plugins['Aliedit Plug-In'] || navigator.plugins['Aliedit'] || null;
										}
										return null;
									}
								}
							 
								if(window.ActiveXObject && !AlieditControl.getAlieditObj() && !AlieditControl.cookie.get('ac-install') && !AlieditControl.cookie.get('ac-install-just-now')) {
									AlieditControl.cookie.set('ac-install-just-now', 'no',24*60*60*1000);
								}
							})();
							
						</script>
						##=====================End==========================================##
